<h1>New Game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <p class="letter"> <%=letter%> </p>
  <% end %>
</div>

<div>
  <form action="/score" method="post" data-turbo="false">
    <label for="word">What's the longest word you can think of?</label>
    <div class="form-submission">
      <input type="text" name="word" placeholder="Give it your best shot!" id="word-input">
      <input type="submit" value="Play!" class="btn btn-primary">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
